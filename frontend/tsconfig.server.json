{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "esModuleInterop": true,  
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./server"
    },
    "include": ["server/**/*.ts"],
    "exclude": ["node_modules"]
  }